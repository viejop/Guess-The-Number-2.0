import  random

class user:
    def __init__(self, name, score):
        self.name = name
        self.score = score
        
    def assignScore(self, score):
        self.score = score
        
    def showProperties(self):
        print("User Properties:")
        print("Username:", self.name)
        print("Score:", self.score)
        

def enterUser():
    
    print("Input your username.")
    usernameInput = input()
    plr = user(usernameInput, 0)
    plr.showProperties()
    

def numberGuesser():
    guessAttempts = 0
    correctNum = random.randint(1,100)
    


    

enterUser()
